<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20px"
    android:background="@drawable/shape"
    android:orientation="vertical"
    tools:context="layout.form_frag_8">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bedroom 2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue"
        android:textSize="100px" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <CheckBox
            android:id="@+id/bedroom2_0"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Dusty ceiling fan"
            android:textColor="@color/dark_blue"
            android:textSize="50px" />

        <CheckBox
            android:id="@+id/bedroom2_1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Dust/cobweb on ceiling"
            android:textColor="@color/dark_blue"
            android:textSize="50px" />

        <CheckBox
            android:id="@+id/bedroom2_2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Dusty baseboard"
            android:textColor="@color/darkblue"
            android:textSize="50px" />

        <CheckBox
            android:id="@+id/bedroom2_3"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Dusty door/door frame"
            android:textColor="@color/darkblue"
            android:textSize="50px" />

        <CheckBox
            android:id="@+id/bedroom2_4"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Dusty blinds"
            android:textColor="@color/darkblue"
            android:textSize="50px" />

        <CheckBox
            android:id="@+id/bedroom2_5"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Dusty window sill"
            android:textColor="@color/darkblue"
            android:textSize="50px" />

        <CheckBox
            android:id="@+id/bedroom2_6"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Dirty/ streaky window"
            android:textColor="@color/darkblue"
            android:textSize="50px" />

        <CheckBox
            android:id="@+id/bedroom2_7"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Dirty light switch plate"
            android:textColor="@color/darkblue"
            android:textSize="50px" />

        <CheckBox
            android:id="@+id/bedroom2_8"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Floor dirty/ not vacuumed in straight lines"
            android:textColor="@color/darkblue"
            android:textSize="50px" />

        <CheckBox
            android:id="@+id/bedroom2_9"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Furniture dusty inside or out"
            android:textColor="@color/darkblue"
            android:textSize="50px" />

        <CheckBox
            android:id="@+id/bedroom2_10"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="No touch ups"
            android:textColor="@color/darkblue"
            android:textSize="50px" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/bedroom2_11"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="others"
                android:textColor="@color/darkblue"
                android:textSize="50px" />

            <EditText
                android:id="@+id/bedroom2_12"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />
        </TableRow>
    </RadioGroup>
</LinearLayout>
