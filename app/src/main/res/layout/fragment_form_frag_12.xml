        android:id="@+id/kitchen_11"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Dirty microwave"
        android:textColor="@color/darkblue"
        android:textSize="50px" />
    <CheckBox
        android:id="@+id/kitchen_12"
        android:layout_width="match_parent"
