        android:id="@+id/kitchen_5"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Dirty Inside the oven"
        android:textColor="@color/darkblue"
        android:textSize="50px" />
    <CheckBox
        android:id="@+id/kitchen_6"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Dirty under the oven"
